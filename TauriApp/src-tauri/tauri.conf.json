{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "DaVinci Resolve Sidekick",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { 
            "name": "../../PythonInterface/dist/even_photos_resolve",
             "sidecar": true ,
             "args": [
              "projectAndTimeline"
            ]

          }
        ]
      },
      "window": {
        "startDragging": true
      },
      "http": {
        "request": true,
        "scope": ["ws://localhost:5000/*", "http://localhost:5000/*"]
      },
      "fs": {
        "readFile": true,
        "removeFile": true,
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "title": "DaVinci Resolve Sidekick",
        "hiddenTitle": true,
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "titleBarStyle": "Overlay",
        "fullscreen": false,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "../../PythonInterface/dist/even_photos_resolve"
      ]
    }
  }
}
